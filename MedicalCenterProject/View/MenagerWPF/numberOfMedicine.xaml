            </ListView.View>
        </ListView>
        <Image Margin="430,29,88,324" Source="logo (1).png" Stretch="Fill"/>
        <Image Margin="398,344,165,38" Source="home-button.png" Stretch="Fill" RenderTransformOrigin="-0.065,0.355"/>

