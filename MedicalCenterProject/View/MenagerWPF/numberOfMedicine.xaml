        <Button Content="Add medicine" HorizontalAlignment="Left" Height="28" Margin="340,296,0,0" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" Click="Button_Click_1" Background="#FF916363"/>
