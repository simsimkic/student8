        <PasswordBox x:Name="passwordBox" FontSize="20" FontWeight="Bold" PasswordChar="*" TabIndex="4" HorizontalAlignment="Left" Margin="190,216,0,0" VerticalAlignment="Top" Width="250" Height="35"/>
        <TextBox x:Name="workplaceTextbox" HorizontalAlignment="Left" Height="37" Margin="190,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
